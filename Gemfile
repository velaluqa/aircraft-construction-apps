source 'https://rubygems.org'

gem 'sinatra', require: 'sinatra/base'
gem 'sinatra-backbone', require: 'sinatra/backbone',
    git: 'https://github.com/leoc/sinatra-backbone',
    branch: 'add-haml-coffee-engine'
gem 'sinatra-assetpack', require: 'sinatra/assetpack',
    git: 'https://github.com/leoc/sinatra-assetpack'

gem 'sinatra-security'

gem 'haml_coffee_assets'
gem 'stylus'
gem 'haml'
gem 'coffee-script'
gem 'git-changelog', git: 'https://github.com/velaluqa/git-changelog'

group :test, :development do
  gem 'pry'
  gem 'pry-doc'
  gem 'method_source'
  gem 'rb-inotify'
  gem 'jasmine'
  gem 'guard-rack'
  gem 'guard-copy3'
  gem 'guard-livereload'
  gem 'guard-jasmine'
  gem 'guard-coffeescript'
  gem 'yui-compressor'
end
